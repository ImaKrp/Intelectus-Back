datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int           @id @default(autoincrement())
  email       String        @unique
  password    String
  name        String
  performance Performance[]
}

model Performance {
  id       Int      @id @default(autoincrement())
  value    Float
  date     DateTime @default(now())
  errors   Int
  duration Float

  user   User? @relation(fields: [userId], references: [id])
  userId Int?
}

model PasswordRecovery {
  id    String @id @default(uuid())
  email String
}
